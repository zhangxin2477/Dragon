<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 访问时，不需要加.action,无须任何后缀名 -->
	<constant name="struts.action.extension" value="," />

	<!-- 由Spring来代理控制层 -->
	<constant name="struts.objectFactory" value="spring" />

	<package name="struts2" namespace="/" extends="json-default">
		<result-types>
			<result-type name="json" class="org.apache.struts2.json.JSONResult" />
		</result-types>
		<!-- 配置拦截器 -->
		<interceptors>
			<interceptor name="json"
				class="org.apache.struts2.json.JSONInterceptor" />
			<interceptor name="myInterceptor" class="myInterceptor" />
			<interceptor-stack name="myDefult">
				<interceptor-ref name="myInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

		<!-- start：theme主题 -->
		<action name="addtheme" class="themeAction" method="add">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>

		<action name="deletetheme" class="themeAction" method="delete">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>

		<action name="updatetheme" class="themeAction" method="update">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>

		<action name="findalltheme" class="themeAction" method="getThemePage">
			<result name="success" type="json">
				<param name="root">page</param>
			</result>
		</action>
		
		<action name="getthemelist" class="themeAction" method="getThemeList">
			<result name="success" type="json">
				<param name="root">list</param>
			</result>
		</action>
		<!-- end:theme主题 -->

		<!-- start:sdirectory子菜单 -->
		<action name="addsdir" class="directoryAction" method="addSdir">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>

		<action name="deletesdir" class="directoryAction" method="deleteSdir">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>

		<action name="updatesdir" class="directoryAction" method="updateSdir">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>

		<action name="getsdirpage" class="directoryAction" method="getSDirPage">
			<result name="success" type="json">
				<param name="root">sdir_page</param>
			</result>
		</action>
		<!-- end:sdirectory子菜单 -->

		<!-- start:directory子菜单 -->
		<action name="adddir" class="directoryAction" method="addDir">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>

		<action name="deletedir" class="directoryAction" method="deleteDir">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>

		<action name="updatedir" class="directoryAction" method="updateDir">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>

		<action name="getdirpage" class="directoryAction" method="getDirPage">
			<result name="success" type="json">
				<param name="root">dir_page</param>
			</result>
		</action>

		<action name="getsdirfordir" class="directoryAction" method="getSdirForDir">
			<result name="success" type="json">
				<param name="root">s_list</param>
			</result>
		</action>
		<!-- end:directory -->

		<action name="login" class="userAction" method="login">
			<result name="none">/WEB-INF/web/user/login.jsp</result>
			<result name="success" type="json">result</result>
		</action>

		<action name="register" class="userAction" method="register">
			<result name="none">/WEB-INF/web/user/register.jsp</result>
			<result name="success" type="json">result</result>
		</action>

		<action name="main" class="userAction" method="index">
			<result name="success">/WEB-INF/web/main.jsp</result>
		</action>

		<action name="publish" class="publishAction" method="PublishInit">
			<result name="success">/WEB-INF/web/publish.jsp</result>
		</action>

		<action name="content" class="contentAction" method="GetContentDetail">
			<result name="success">/WEB-INF/web/content.jsp</result>
		</action>

		<action name="manager" class="managerAction" method="ManagerInit">
			<result name="success">/WEB-INF/web/manager/manager.jsp</result>
		</action>

	</package>
</struts>    
